<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang di"
            android:textColor="@color/text_dark"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:text="EventGo!"
            android:textColor="@color/soft_blue_accent"
            android:textSize="42sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnViewEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Lihat Daftar Event"
            style="@style/Widget.EventGo.Button" />

        <Button
            android:id="@+id/btnAddEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah Event Baru"
            style="@style/Widget.EventGo.Button"
            android:backgroundTint="@color/soft_blue_primary"
            android:textColor="@color/text_dark"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>