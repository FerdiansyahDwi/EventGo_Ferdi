<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light"
    tools:context=".OrderTicketActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvOrderTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konfirmasi Pemesanan"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/soft_blue_accent"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvEventName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_dark"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"
                    tools:text="Nama Event Good Day" />

                <TextView
                    android:id="@+id/tvEventDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_dark"
                    tools:text="01-11-2025" />

                <TextView
                    android:id="@+id/tvEventPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_price"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_dark"
                    android:layout_marginTop="4dp"
                    tools:text="Rp 200.000 / tiket" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pemesan"
            android:textColor="@color/text_dark"
            android:textSize="14sp"
            android:layout_marginStart="4dp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama lengkap Anda"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp"
            style="@style/Widget.EventGo.EditText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Tiket"
            android:textColor="@color/text_dark"
            android:textSize="14sp"
            android:layout_marginStart="4dp" />

        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jumlah"
            android:inputType="number"
            android:text="1"
            android:layout_marginBottom="16dp"
            style="@style/Widget.EventGo.EditText" />

        <LinearLayout
            android:id="@+id/nameFieldsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:layout_marginBottom="24dp"
            style="@style/Widget.EventGo.EditText"/>

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/soft_blue_accent"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            tools:text="Total: Rp 200.000" />


        <Button
            android:id="@+id/btnSubmitOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pesan Sekarang"
            style="@style/Widget.EventGo.Button"
            android:backgroundTint="@color/soft_blue_dark" />

    </LinearLayout>
</ScrollView>