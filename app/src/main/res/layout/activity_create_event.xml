<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Buat Event Baru"
            android:textColor="@color/soft_blue_accent"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/ivPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/divider_color"
                android:contentDescription="Event Image Preview"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_placeholder" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnSelectImage"
            style="@style/Widget.EventGo.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/soft_blue_primary"
            android:text="Pilih Gambar Event"
            android:textColor="@color/text_dark" />

        <EditText
            android:id="@+id/etTitle"
            style="@style/Widget.EventGo.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Nama Event" />

        <EditText
            android:id="@+id/etDescription"
            style="@style/Widget.EventGo.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="top|start"
            android:hint="Deskripsi Event"
            android:minLines="3" />

        <EditText
            android:id="@+id/etDate"
            style="@style/Widget.EventGo.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="Tanggal Event" />

        <EditText
            android:id="@+id/etLocation"
            style="@style/Widget.EventGo.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Lokasi Event" />

        <org.osmdroid.views.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_map_background" />

        <EditText
            android:id="@+id/etPrice"
            style="@style/Widget.EventGo.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="Harga Tiket (contoh: 50000)"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnSave"
            style="@style/Widget.EventGo.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan Event" />
    </LinearLayout>
</ScrollView>