<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EventGo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/soft_blue_primary</item>
        <item name="colorPrimaryVariant">@color/soft_blue_dark</item>
        <item name="colorOnPrimary">@color/text_light</item>
        <item name="colorSecondary">@color/soft_blue_dark</item>
        <item name="colorSecondaryVariant">@color/soft_blue_accent</item>
        <item name="colorOnSecondary">@color/text_light</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="editTextStyle">@style/Widget.EventGo.EditText</item>
        <item name="materialButtonStyle">@style/Widget.EventGo.Button</item>
    </style>

    <style name="Widget.EventGo.EditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textColorHint">@color/divider_color</item>
    </style>

    <style name="Widget.EventGo.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Widget.EventGo.Button.Small" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Widget.EventGo.Button.Small.Red" parent="Widget.EventGo.Button.Small">
        <item name="android:backgroundTint">@color/error_red</item>
        <item name="android:textColor">@color/text_light</item>
    </style>
</resources>